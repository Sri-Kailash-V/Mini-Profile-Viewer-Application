<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alliancefacultyportal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/alliance_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ProfileClass"
            android:label="Profile view">
            <intent-filter>
                <action android:name="android.intent.action.profileClassXml" />
                <category android:name="android.intent.category.Default" />
            </intent-filter>
        </activity>
        <activity android:name=".DocumentClass"
            android:label="Documents">
            <intent-filter>
                <action android:name="android.intent.action.documentclassXml" />
                <category android:name="android.intent.category.Default" />
            </intent-filter>
        </activity>
        <activity android:name=".VideoClass"
            android:label="Videos">
            <intent-filter>
                <action android:name="android.intent.action.videoclassXml" />
                <category android:name="android.intent.category.Default" />
            </intent-filter>
        </activity>
    </application>

</manifest>